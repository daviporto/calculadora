<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_c"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_backgound"
    tools:context=".Fragment1">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/general_backgound"
        app:layout_constraintEnd_toStartOf="@+id/btn_0"
        app:layout_constraintStart_toStartOf="@+id/btn_0">

        <Button
            android:id="@+id/btn_sqrt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/general_backgound"
            android:isScrollContainer="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:icon="@drawable/icon_square_root"
            app:iconGravity="textEnd"
            app:layout_constraintBottom_toTopOf="@+id/btn_0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_0"
            app:layout_constraintTop_toBottomOf="@+id/btn_1" />

        <Button
            android:id="@+id/btn_times"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/general_backgound"
            android:text="X"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBottom_toTopOf="@+id/btn_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_1"
            app:layout_constraintTop_toBottomOf="@+id/btn_6" />

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:text="."
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_equals"
            app:layout_constraintEnd_toStartOf="@+id/btn_equals"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/general_backgound"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_sqrt"
            app:layout_constraintStart_toEndOf="@+id/btn_equals"
            app:layout_constraintTop_toBottomOf="@+id/btn_sqrt" />

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:text="="
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_0"
            app:layout_constraintEnd_toStartOf="@+id/btn_0"
            app:layout_constraintStart_toEndOf="@+id/btn_dot" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:text="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_2"
            app:layout_constraintEnd_toStartOf="@+id/btn_2"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:text="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_1"
            app:layout_constraintEnd_toStartOf="@+id/btn_1"
            app:layout_constraintStart_toEndOf="@+id/btn_3" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:layout_marginEnd="1dp"
            android:layout_marginBottom="17dp"
            android:background="@color/general_backgound"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBottom_toTopOf="@+id/btn_sqrt"
            app:layout_constraintEnd_toStartOf="@+id/btn_times"
            app:layout_constraintStart_toEndOf="@+id/btn_2"
            app:layout_constraintTop_toBottomOf="@+id/btn_times" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:text="/"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBottom_toTopOf="@+id/btn_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_6"
            app:layout_constraintTop_toBottomOf="@+id/btn_9" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:text="6"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBottom_toTopOf="@+id/btn_times"
            app:layout_constraintEnd_toStartOf="@+id/btn_divide"
            app:layout_constraintStart_toEndOf="@+id/btn_5"
            app:layout_constraintTop_toBottomOf="@+id/btn_divide" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:shadowColor="#FFFFFF"
            android:text="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_6"
            app:layout_constraintEnd_toStartOf="@+id/btn_6"
            app:layout_constraintStart_toEndOf="@+id/btn_4"
            app:rippleColor="#171111" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:layout_marginEnd="1dp"
            android:background="@color/general_backgound"
            android:shadowColor="#FFFFFF"
            android:text="C"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBottom_toTopOf="@+id/btn_plus"
            app:layout_constraintEnd_toStartOf="@+id/btn_erase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_result"
            app:rippleColor="#171111" />


        <Button
            android:id="@+id/btn_erase"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:isScrollContainer="false"
            android:shadowColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:icon="@android:drawable/ic_input_delete"
            app:iconGravity="textEnd"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_potentia"
            app:layout_constraintEnd_toStartOf="@+id/btn_potentia"
            app:layout_constraintStart_toEndOf="@+id/btn_clear"
            app:rippleColor="#171111" />
        app:backgroundTint="@color/general_backgound"

        <Button
            android:id="@+id/btn_potentia"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="17dp"

            android:autoText="false"
            android:background="@color/general_backgound"
            android:shadowColor="@color/purple_200"
            android:text="^"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBottom_toTopOf="@+id/btn_minus"
            app:layout_constraintEnd_toStartOf="@+id/btn_plus"
            app:layout_constraintStart_toEndOf="@+id/btn_erase"
            app:layout_constraintTop_toBottomOf="@+id/btn_plus"
            app:rippleColor="#171111" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:shadowColor="#FFFFFF"
            android:text="+"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBottom_toTopOf="@+id/btn_potentia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_potentia"
            app:layout_constraintTop_toBottomOf="@+id/btn_clear"
            app:rippleColor="#171111" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:shadowColor="#FFFFFF"
            android:text="7"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_8"
            app:layout_constraintEnd_toStartOf="@+id/btn_8"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="#171111" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:shadowColor="#FFFFFF"
            android:text="8"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_9"
            app:layout_constraintEnd_toStartOf="@+id/btn_9"
            app:layout_constraintStart_toEndOf="@+id/btn_7"
            app:rippleColor="#171111" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:shadowColor="#FFFFFF"
            android:text="9"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBottom_toTopOf="@+id/btn_divide"
            app:layout_constraintEnd_toStartOf="@+id/btn_minus"
            app:layout_constraintStart_toEndOf="@+id/btn_8"
            app:layout_constraintTop_toBottomOf="@+id/btn_minus"
            app:rippleColor="#171111" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:shadowColor="#FFFFFF"
            android:text="-"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBottom_toTopOf="@+id/btn_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_9"
            app:layout_constraintTop_toBottomOf="@+id/btn_potentia"
            app:rippleColor="#171111" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:background="@color/general_backgound"
            android:shadowColor="#FFFFFF"
            android:text="4"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:backgroundTint="@color/general_backgound"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_5"
            app:layout_constraintEnd_toStartOf="@+id/btn_5"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="#171111" />

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/background_text_view"
            android:ems="10"
            android:inputType="textMultiLine|text"
            android:singleLine="false"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            app:layout_constraintBottom_toTopOf="@+id/flow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/general_backgound"
            android:orientation="horizontal"
            app:constraint_referenced_ids="btn_clear,btn_erase,btn_potentia,btn_plus,btn_7,btn_8,btn_9,btn_minus,btn_4,btn_5,btn_6,btn_divide,btn_3,btn_2,btn_1,btn_times,btn_dot,btn_equals,btn_0,btn_sqrt"
            app:flow_maxElementsWrap="4"
            app:flow_wrapMode="chain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_result" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>